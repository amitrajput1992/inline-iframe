{
  "extends": "@snowpack/app-scripts-react",
  "plugins": [
    [
      "@snowpack/plugin-webpack", {
        "outputPattern": {"css": "[name].bundle.css", "js": "[name].bundle.js", "assets": "[name]"}
      }
    ],
    "snowpack-plugin-sass"
  ],
  "devOptions": {
    "open": "none"
  },
  "buildOptions": {
    "clean": true,
    "metaDir": "static/snowpack"
  },
  "mount": {
    "src": "/dist"
  }
}
